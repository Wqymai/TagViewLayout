<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="hard_normal">
        <item name="ptc_tag_border_color">@color/colorwhite_05</item>
        <item name="ptc_tag_background_color">@color/colorwhite_06</item>
        <item name="ptc_tag_text_color">@color/colorwhite_07</item>
    </style>

    <style name="hard_active">
        <item name="ptc_tag_border_color">@color/colorwhite_08</item>
        <item name="ptc_tag_background_color">@color/colorwhite_09</item>
        <item name="ptc_tag_text_color">@color/colorwhite_10</item>
    </style>

    <style name="tagnormal">
        <item name="ptc_tag_border_color">@color/colorPrimary</item>
        <item name="ptc_tag_background_color">@color/colorPrimaryDark</item>
        <item name="ptc_tag_text_color">@color/colorAccent</item>
    </style>

    <style name="tagactive">
        <item name="ptc_tag_border_color">@color/colorwhite</item>
        <item name="ptc_tag_background_color">@color/colorwhitew</item>
        <item name="ptc_tag_text_color">@color/colorAccent</item>
    </style>

    <style name="tagnormal.big" parent="tagnormal">
        <item name="ptc_tag_background_color">@color/colorAccent</item>
        <item name="ptc_tag_text_color">@color/colorwhitew</item>
    </style>

    <style name="tagactive.big" parent="tagactive">
        <item name="ptc_tag_background_color">@color/colorwhite_02</item>
        <item name="ptc_tag_border_color">@color/colorPrimaryDark</item>
    </style>

    <style name="tagnormal.preactive" parent="tagnormal">
        <item name="ptc_tag_background_color">@color/colorwhite_03</item>
        <item name="ptc_tag_border_color">@color/colorwhite_05</item>
        <item name="ptc_tag_text_color">@color/colorwhite_02</item>
    </style>
</resources>
